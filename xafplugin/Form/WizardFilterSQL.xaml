<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="xafplugin.Form.WizardFilterSQL"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Filter Menu" Height="450" Width="800">
    <Window.Resources>
        <!-- Converts a Boolean to Visibility.  Built‑in converter provided by WPF. -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Main editor area takes the remaining width -->
            <ColumnDefinition Width="*" />
            <!-- Column list takes a fixed width on the right -->
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- Row for the table name input -->
            <RowDefinition Height="Auto" />
            <!-- Row for the editor and suggestions -->
            <RowDefinition Height="*" />
            <!-- Row for buttons at the bottom -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Name input at the top -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10" Orientation="Horizontal">
            <Label Content="Name:" VerticalAlignment="Center" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" Height="24" VerticalAlignment="Center" />
        </StackPanel>

        <!-- Main editor area with RichTextBox -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="10">
            <!-- RichTextBox for entering the SQL CASE expression -->
            <RichTextBox x:Name="SqlRichTextBox"
                         VerticalScrollBarVisibility="Auto"
                         AcceptsTab="True"
                         TextChanged="SqlRichTextBox_TextChanged"
                         Margin="0,0,0,5"/>
            
            <!-- Popup for suggestions near the cursor -->
            <Popup x:Name="SuggestionsPopup"
       IsOpen="{Binding IsSuggestionsVisible}"
       StaysOpen="False"
       Placement="RelativePoint"
       PlacementTarget="{Binding ElementName=SqlRichTextBox}"
       AllowsTransparency="True">
                <ListBox x:Name="SuggestionsListBox"
             ItemsSource="{Binding Suggestions}"
             Background="White"
             BorderBrush="Gray"
             BorderThickness="1"
             Width="200"
             MaxHeight="200"
             MouseDoubleClick="SuggestionsListBox_MouseDoubleClick"/>
            </Popup>

        </Grid>

        <!-- Right panel: list of available columns -->
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="10">
            <Label Content="Columns" />
            <ListBox x:Name="ColumnsListBox"
                     ItemsSource="{Binding Columns}"
                     MouseDoubleClick="ColumnsListBox_MouseDoubleClick"/>
        </StackPanel>

        <!-- Bottom row: OK and Cancel buttons -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="10">
            <Button Content="Add filter" Width="75" Margin="0,0,5,0" Command="{Binding OkCommand}" />
            <Button Content="Cancel" Width="75" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>