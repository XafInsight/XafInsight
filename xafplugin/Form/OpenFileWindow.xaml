<UserControl x:Class="xafplugin.Form.OpenFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:xafplugin.Form"
        MinWidth="500"
        Height="400">
    <UserControl.Resources>
        <local:SelectedEntryToBoolConverter x:Key="SelectedEntryToBoolConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    <Grid>
        <DockPanel Margin="8">
            <TextBox DockPanel.Dock="Top"
                 Margin="0,0,0,6"
                 Height="24"
                 VerticalContentAlignment="Center"
                 Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />
            <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
                <Button Content="Select a file"
                    Width="80"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Command="{Binding SelectFileCommand}" />
                <Button Content="OK"
                    Width="80"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Command="{Binding ConfirmCommand}"
                    IsEnabled="{Binding DataContext.SelectedEntry,
                    RelativeSource={RelativeSource AncestorType=UserControl},
                    Converter={StaticResource SelectedEntryToBoolConverter}}" />
                <Button Content="Annuleren"
                    Width="80"
                    IsCancel="True"
                    Command="{Binding CancelCommand}" />
            </StackPanel>

            <Border BorderBrush="#CCC"
                BorderThickness="1">
                <ListBox x:Name="ListEntries"
                     ItemsSource="{Binding FilteredEntries}"
                     SelectedItem="{Binding SelectedEntry, Mode=TwoWay}"
                     HorizontalContentAlignment="Stretch"
                     MouseDoubleClick="ListEntries_MouseDoubleClick"
                     KeyboardNavigation.TabNavigation="Continue">
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="4" />
                            <Setter Property="ToolTip" Value="{Binding}" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            SnapsToDevicePixels="True">
                                            <ContentPresenter Margin="2"
                                                          VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#FFEFF6FF" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#FFCCE5FF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                   TextTrimming="CharacterEllipsis" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </DockPanel>
        <Grid Background="#80000000"
      Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
      IsHitTestVisible="{Binding IsBusy}">
            <Border CornerRadius="6" Padding="20" Background="#FF2D2D30"
            HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="{Binding BusyText}" 
                       Foreground="White" 
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 12" />
                    <ProgressBar IsIndeterminate="True" Width="220" Height="18" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>