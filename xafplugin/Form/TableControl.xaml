<UserControl x:Class="xafplugin.Form.TableControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Height="400" Width="500"
             Background="#FFF">
    <UserControl.Resources>
        <!-- Style voor de delete button die pas zichtbaar wordt bij hover -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="BorderBrush" Value="#E85D5D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#E85D5D"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="Verwijder tabel"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE6E6"/>
                    <Setter Property="BorderBrush" Value="#D22"/>
                    <Setter Property="Foreground" Value="#D22"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Linkerkolom: tables -->
        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock Text="Tables" FontWeight="Bold" Margin="0,0,0,8"/>
            <ListBox ItemsSource="{Binding ExportTables}"
                     SelectedItem="{Binding SelectedTable, Mode=TwoWay}"
                     Height="240">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Tabelnaam links -->
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" Width="120" Grid.Column="0"/>
                            <!-- Verwijderknop rechts -->
                            <Button Grid.Column="1"
                                    Style="{StaticResource DeleteButtonStyle}"
                                    Click="BtnVerwijderTabel_Click"
                                    Tag="{Binding}">
                                <TextBlock Text="🗑" FontSize="14" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0" Margin="32,0,0,0">
            <TextBlock Text="Columns" FontWeight="Bold" Margin="0,0,0,8"/>
            <ListBox ItemsSource="{Binding SelectedTableColumns}"
                     SelectedItem="{Binding SelectedColumn, Mode=TwoWay}"
                     Height="240" />
        </StackPanel>

        <Button Grid.ColumnSpan="2" Grid.Row="1" Content="Add table"
                Height="34" Width="130" HorizontalAlignment="Right" Margin="0,18,0,0"
                Click="BtnToevoegen_Click"/>
    </Grid>
</UserControl>
