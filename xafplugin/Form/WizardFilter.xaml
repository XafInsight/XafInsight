<Window x:Class="xafplugin.Form.WizardFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xafplugin.Form"
             mc:Ignorable="d" 
             ResizeMode="NoResize"
             Height="400" Width="400">
    <Window.Resources>
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="BorderBrush" Value="#E85D5D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#E85D5D"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="Verwijder tabel"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=IsMouseOver}" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE6E6"/>
                    <Setter Property="BorderBrush" Value="#D22"/>
                    <Setter Property="Foreground" Value="#D22"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Name section -->
            <RowDefinition Height="*"/> <!-- Filter conditions section -->
            <RowDefinition Height="Auto"/> <!-- Button section -->
        </Grid.RowDefinitions>

        <!-- Filter Name -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Filter Name:" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Name="txtName" Padding="5"/>
        </Grid>

        <!-- Scrollable Filter Conditions -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="filterConditionsPanel">
                <!-- Initial Filter Condition with Delete Button -->
                <GroupBox Margin="0,0,0,10">
                    <GroupBox.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Condition 1" VerticalAlignment="Center" Grid.Column="0"/>
                            <Button Content="X" Style="{StaticResource DeleteButtonStyle}" 
                                    Click="DeleteCondition_Click" Tag="1" 
                                    Name="btnDeleteCondition1" Grid.Column="1"/>
                        </Grid>
                    </GroupBox.Header>
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Column -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Column:" Margin="0,0,10,5" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Name="cboTable" Margin="0,0,0,5" Padding="5" ItemsSource="{Binding Columns}"/>
                        
                        <!-- Operator -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Operator:" Margin="0,0,10,5" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Name="cboOperator" Margin="0,0,0,5" Padding="5"/>

                        <!-- Value -->
                        <Label Grid.Row="2" Grid.Column="0" Content="Value:" Margin="0,0,10,5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="txtValue" Margin="0,0,0,5" Padding="5"/>
                    </Grid>
                </GroupBox>
                
                <!-- More conditions will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Add Condition Button -->
            <Button Grid.Column="1" Name="btnAddCondition" Click="btnAddCondition_Click" Margin="0,0,10,0" Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="+" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text=" Add Condition" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Complete Button -->
            <Button Grid.Column="2" Name="btnComplete" Padding="10,5" Click="btnComplete_Click">
                <TextBlock Text="Add FIlter" VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </Grid>
</Window>
